{
  "name": "closing-notes",
  "version": "2.0.1",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./public/index.html",
  "author": {
    "name": "Precinct 702",
    "email": "precinct0702@geeksquad.ca"
  },
  "build": {
    "appId": "com.precinct.closingnotes",
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "installerIcon": "build/Geek.ico",
      "uninstallerIcon": "build/Geek.ico",
      "uninstallDisplayName": "Uninstall Closing notes"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "./build/Geek.ico"
    }
  },
  "contributors": [
    {
      "name": "Leif Sandvar",
      "email": "lsandvar@geeksquad.ca"
    },
    {
      "name": "Gregory Huber",
      "email": "ghuber@geeksquad.ca"
    }
  ],
  "dependencies": {
    "@date-io/core": "^1.3.6",
    "@date-io/date-fns": "^1.1.0",
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/pickers": "^3.0.0",
    "date-fns": "^2.0.0-alpha.27",
    "electron-is-dev": "^1.0.1",
    "node-pre-gyp": "^0.12.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "react-transition-group": "^4.1.0",
    "sqlite3": "^4.0.6",
    "sqlstring": "^2.3.1",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build -c.extraMetadata.main=build/electron.js",
    "preelectron-pack": "yarn build",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "electron-rebuild": "^1.8.4",
    "wait-on": "^3.2.0"
  }
}
